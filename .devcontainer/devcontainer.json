{
  "name": "Go and Node.js Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/go:latest", // Base image with Go
  "features": {
      "ghcr.io/devcontainers/features/node:1": { // Feature for Node.js
          "version": "lts" // Or a specific version like "18"
      }
  },
  "customizations": {
    "vscode": {
      "extensions": [
          "golang.go",
          "dbaeumer.vscode-eslint",
          "esbenp.prettier-vscode"
          // Add other extensions relevant to your project
      ]
    }
  },
  "forwardPorts": [1313] // Add ports to forward if needed (e.g., 3000 for a Node.js app)
}